<UserControl x:Class="LoggerWPF.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LoggerWPF.Core;assembly=LoggerWPF.Core"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             Loaded="OnLoading"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <TextBlock Text="Settings Profile" FontSize="20" Margin="0,0,0,10"/>
                <ComboBox Width="150" HorizontalAlignment="Left"
                          Margin="0,0,0,10"
                          ItemsSource="{Binding Options}"
                          SelectedItem="{Binding SelectedOption, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Grid Visibility="{Binding IsMainVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Profile Name:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,5"/>
                    <TextBox Text="{Binding SelectedConfig.ProfileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Row="0" Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="0,0,0,5"/>
                    <TextBlock Text="Callsign:" Grid.Row="1" Grid.Column="0" Margin="0,0,10,5"/>
                    <TextBox Text="{Binding SelectedConfig.Callsign, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Row="1" Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="0,0,0,5"/>
                    <TextBlock Text="Station Name:" Grid.Row="2" Grid.Column="0" Margin="0,0,10,5"/>
                    <TextBox Text="{Binding SelectedConfig.StationName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Row="2" Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="0,0,0,5"/>
                    <TextBlock Text="Grid Square:" Grid.Row="3" Grid.Column="0" Margin="0,0,10,5"/>
                    <TextBox Text="{Binding SelectedConfig.GridSquare, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Row="3" Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="0,0,0,5"/>
                    <TextBlock Text="City:" Grid.Row="4" Grid.Column="0" Margin="0,0,10,5"/>
                    <TextBox Text="{Binding SelectedConfig.City, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Row="4" Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="0,0,0,5"/>
                    <TextBlock Text="County:" Grid.Row="5" Grid.Column="0" Margin="0,0,10,5"/>
                    <TextBox Text="{Binding SelectedConfig.County, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Row="5" Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="0,0,0,5"/>
                    <TextBlock Text="County Code:" Grid.Row="6" Grid.Column="0" Margin="0,0,10,5"/>
                    <TextBox Text="{Binding SelectedConfig.CountyCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Row="6" Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="0,0,0,5"/>
                    <TextBlock Text="State:" Grid.Row="7" Grid.Column="0" Margin="0,0,10,5"/>
                    <TextBox Text="{Binding SelectedConfig.State, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Row="7" Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="0,0,0,5"/>
                    <TextBlock Text="DXCC:" Grid.Row="8" Grid.Column="0" Margin="0,0,10,5"/>
                    <TextBox Text="{Binding SelectedConfig.Dxcc, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Row="8" Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="0,0,0,5"/>
                    <TextBlock Text="Pro Key:" Grid.Row="9" Grid.Column="0" Margin="0,0,10,5"/>
                    <TextBox Text="{Binding SelectedConfig.ProKey, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Grid.Row="9" Grid.Column="1" Width="200" HorizontalAlignment="Left" Margin="0,0,0,5"/>
                </Grid>
                <Button Content="Save" Command="{Binding SaveConfigCommand}" Width="100" HorizontalAlignment="Left" Margin="0,10,0,0"/>
                <TextBlock Text="{Binding Message}" FontSize="14" Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>
        <StackPanel Grid.Row="1" Background="Gray"/>
    </Grid>
</UserControl>
