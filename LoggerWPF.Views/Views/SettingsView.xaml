<UserControl x:Class="LoggerWPF.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Loaded="OnLoading">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Settings Profile" FontSize="20" Margin="5,0,0,10"/>
            <ComboBox Width="150" HorizontalAlignment="Left"
                      Margin="5,0,0,10"
                      ItemsSource="{Binding Options}"
                      SelectedItem="{Binding SelectedOption, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <StackPanel Background="Aquamarine" Height="150" Margin="5,0,0,10"></StackPanel>
            <StackPanel Background="Aquamarine" Height="100" Margin="5,0,0,10"></StackPanel>
            <StackPanel Background="Aquamarine" Height="100" Margin="5,0,0,10"></StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Background="Gray"/>
    </Grid>
</UserControl>
